if test ! -x configure; then
  echo aclocal -I cmulocal
  aclocal -I cmulocal
  echo autoheader
  autoheader
  echo autoconf
  autoconf
  echo automake --add-missing --include-deps
  automake --add-missing --include-deps
fi

LIBS=""
case `uname` in
  Linux) CFLAGS="${CFLAGS} -O2 -g"
	 LIBS="-ldb"
	 LNEXTRA=" --with-javabase=/usr/local/lib/java/"
	 ;;

  SunOS) CC="gcc"
	 CFLAGS="${CFLAGS} -O2 -g"
	 LNEXTRA=" --with-javabase=/usr/java/"
	 LIBS="-ldb"
#	 CC="cc"
#	 if test "${WASH_CYRUS_DEBUG}" = "t"; then
#	   CFLAGS="${CFLAGS} -xs -g"
#         else
#	   CFLAGS="${CFLAGS} -xO3 -xdepend"
#         fi
	 ;;
esac

MAKE=gmake
LNCOMMAND="${SRCDIR}/configure --prefix=/usr/local --enable-cmulocal --enable-java ${LNEXTRA}"
CPPFLAGS=-I/usr/local/include/gssapi
INSTCOMMAND="${MAKE} DESTDIR=${DESTDIR} install"

export CC CFLAGS CPPFLAGS LIBS
